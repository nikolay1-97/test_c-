using System;
using System.Linq;

class Program
{
    static void Main()
    {
        int[] ls = Array.ConvertAll(Console.ReadLine().Split(), int.Parse);
        Func(ls);
    }

    static void Func(int[] ls)
    {
        Array.Sort(ls);
        int half = ls.Length / 2;
        double median;

        if (ls.Length % 2 == 0)
        {
            half -= 1;
            median = (ls[half] + ls[half + 1]) / 2.0;
        }
        else
        {
            median = ls[half];
        }

        int res = 0;
        int cnt = 0;

        while (true)
        {
            if (cnt == 1)
            {
                break;
            }
            cnt += 1;

            for (int i = 0; i < ls.Length; i++)
            {
                int indexMaxElem = Array.IndexOf(ls, ls.Max());
                if (ls[i] >= median)
                {
                    continue;
                }
                if (i == 0)
                {
                    res += 1;
                    ls[i] += 1;
                    ls[indexMaxElem] -= 1;
                }
                else
                {
                    res += Math.Abs(i - indexMaxElem);
                    ls[i] += 1;
                    ls[indexMaxElem] -= Math.Abs(i - indexMaxElem);
                }
            }
        }

        for (int i = 0; i < ls.Length; i++)
        {
            if (ls[i] > median)
            {
                res += (int)Math.Abs(median - ls[i]);
            }
        }
        Console.WriteLine(res);
    }
}

