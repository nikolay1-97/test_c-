using System;
using System.Linq;

class Program
{
    static void Main()
    {
        int[] a = Console.ReadLine().Split().Select(int.Parse).ToArray();
        F(a);
    }

    // проверяет равное ли количество фишек у игроков
    static bool IsEqual(int[] ls)
    {
        int val = ls[0];
        for (int i = 0; i < ls.Length; i++)
        {
            if (ls[i] != val)
            {
                return false;
            }
        }
        return true;
    }

    static void F(int[] ls)
    {
        int res = 0;
        double targetValue = ls.Average();
        int lessIndex = 0;
        int higherIndex = 0;

        while (true)
        {
            Console.WriteLine($"шаг1: {string.Join(", ", ls)}");
            bool isEq = IsEqual(ls);
            if (isEq)
            {
                break;
            }

            for (int i = 0; i < ls.Length; i++)
            {
                isEq = IsEqual(ls);
                if (isEq)
                {
                    break;
                }
                if (ls[i] < targetValue)
                {
                    lessIndex = i;
                }
                if (ls[i] > targetValue)
                {
                    higherIndex = i;
                }
            }

            ls[lessIndex] += 1;
            ls[higherIndex] -= 1;

            int diff1 = Math.Abs((higherIndex + 1) - (lessIndex + 1));
            int diff2 = Math.Abs(ls.Length - (higherIndex + 1)) + (lessIndex + 1);
            int diff3 = (higherIndex + 1) + Math.Abs(ls.Length - (lessIndex + 1));

            // минимальное количество ходов
            int minValue = Math.Min(diff1, Math.Min(diff2, diff3));
            res += minValue;
        }
        Console.WriteLine(res);
    }
}

